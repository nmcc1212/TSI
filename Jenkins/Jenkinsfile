pipeline {
    agent any
    tools {
        nodejs "NodeJS"
    }
    environment {
        SSH_KEY = credentials('nial-ssh-aws') // Credential ID for SSH private key
        REMOTE_USER = 'ubuntu' // User to SSH into the EC2 instance
        REMOTE_HOST = '13.49.230.240' // Public IP or hostname of your EC2 instance
    }
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
                dir ('next/news-aggregation') {
                    sh 'npm install'
                }
                dir ('newAPI') {
                    sh 'npm install'
                }
            }
        }
        stage('debug') {
            steps {
                sh 'pwd'
                sh 'ls -la'
            }
        }
        stage ('sonarqube') {
            steps {
                script {
                    def scannerHome = tool 'SonarQube';
                    withSonarQubeEnv('newnewtitanium') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
        stage('Remote git pull') {
            steps {
                script {
                    sh "ssh -i ${SSH_KEY} ubuntu@13.49.230.240 'cd TSI && git pull'"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh "ssh -i ${SSH_KEY} ubuntu@13.49.230.240 'screen && cd TSI/next/news-aggregation && npm install && npm run dev'"
                }
            }
        }
        stage('jest') {
            steps {
                dir ('next/news-aggregation') {
                    sh 'npm test'
                }
            }
        }
    }
}

pipeline {
    agent any
    tools {
        nodejs "NodeJS"
    }
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
                dir ('next/news-aggregation') {
                    sh 'npm install'
                }
                dir ('newAPI') {
                    sh 'npm install'
                }
            }
        }
        stage('debug') {
            steps {
                sh 'pwd'
                sh 'ls -la'
            }
        }
        stage ('sonarqube') {
            steps {
                script {
                    def scannerHome = tool 'SonarQube';
                    withSonarQubeEnv('newnewtitanium') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
        stage('Remote git pull') {
            steps {
                script {
                    sshagent(['nial-ssh-creds']) {
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@13.49.230.240 'cd TSI && git pull'"
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sshagent(['nial-ssh-creds']) {
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@13.49.230.240 'screen -d -m && cd TSI/next/news-aggregation && npm install && sudo npm run dev -- -p 80 -H 0.0.0.0'"
                    }
                }
            }
        }
        stage('OWASP ZAP')
            steps {
                script {
                    startZap(
                        host: '13.49.230.240',
                        port: 80,
                        zapHome: '/opt/zaproxy',
                    )
                }
            }
        stage('jest') {
            steps {
                dir ('next/news-aggregation') {
                    sh 'npm test'
                }
    post {
        always {
            archiveArtifacts artifacts: 'next/news-aggregation/__tests__/coverage/lcov-report/**', allowEmptyArchive: true
            archiveArtifacts artifacts: 'next/news-aggregation/test-report.html' , allowEmptyArchive: true
            junit 'next/news-aggregation/test-report.xml'
            }
        }
    }
}

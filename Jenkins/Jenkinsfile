pipeline {
    agent any
    tools {
        nodejs "NodeJS"
    }
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
                dir ('next/news-aggregation') {
                    sh 'npm install'
                }
                dir ('newAPI') {
                    sh 'npm install'
                }
            }
        }
        stage('debug') {
            steps {
                sh 'pwd'
                sh 'ls -la'
            }
        }
        stage ('sonarqube') {
            steps {
                script {
                    def scannerHome = tool 'SonarQube';
                    withSonarQubeEnv('newnewtitanium') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
        stage('Remote git pull') {
            steps {
                script {
                    sshagent(['nial-ssh-creds']) {
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@13.49.230.240 'cd TSI && git pull'"
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sshagent(['nial-ssh-creds']) {
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@13.49.230.240 'screen && cd TSI/next/news-aggregation && npm install && npm run dev'"
                    }
                }
            }
        }
        stage('jest') {
            steps {
                dir ('next/news-aggregation') {
                    sh 'npm test'
                }
            }
        }
    }
}
